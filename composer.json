{
    "name": "drjele/doctrine-utility",
    "type": "library",
    "description": "Doctrine utility library",
    "keywords": [
        "doctrine",
        "symfony",
        "type",
        "query",
        "repository"
    ],
    "homepage": "https://gitlab.com/drjele/doctrine-utility",
    "license": "MIT",
    "authors": [
        {
            "name": "Adrian Jeledintan",
            "email": "adrian.jeledintan@gmail.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "ext-pdo": "*",
        "doctrine/orm": "^2.10"
    },
    "require-dev": {
        "drjele/symfony-phpunit": "^3.0",
        "friendsofphp/php-cs-fixer": "^3.4",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "autoload": {
        "psr-4": {
            "Drjele\\Doctrine\\Utility\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Drjele\\Doctrine\\Utility\\Test\\": "tests/"
        }
    },
    "scripts": {
        "install-hooks": [
            "[ $COMPOSER_DEV_MODE -eq 1 ] && rm -rf .git/hooks && ln -s ../scripts/git_hooks .git/hooks || exit 0"
        ],
        "post-install-cmd": [
            "@install-hooks"
        ],
        "post-update-cmd": [
            "@install-hooks"
        ]
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "sort-packages": true
    },
    "extra": {
        "exclude": [
            "/scripts",
            "/tests",
            "/.php-cs-fixer.dist.php",
            "/.php_cs.dist",
            "/phpcs.xml.dist",
            "/phpunit.xml.dist"
        ]
    }
}
