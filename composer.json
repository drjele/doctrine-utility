{
    "name": "drjele/doctrine-utility",
    "type": "library",
    "description": "Doctrine utility library",
    "keywords": [
        "doctrine",
        "repository"
    ],
    "homepage": "https://gitlab.com/drjele/doctrine-utility",
    "license": "MIT",
    "authors": [
        {
            "name": "Adrian Jeledintan",
            "email": "adrian.jeledintan@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.2",
        "ext-pdo": "*",
        "doctrine/orm": "^2.17"
    },
    "require-dev": {
        "drjele/symfony-phpunit": "^5.1",
        "friendsofphp/php-cs-fixer": "^3.42",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.8"
    },
    "autoload": {
        "psr-4": {
            "Drjele\\Doctrine\\Utility\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Drjele\\Doctrine\\Utility\\Test\\": "tests/"
        }
    },
    "scripts": {
        "install-hooks": [
            "[ $COMPOSER_DEV_MODE -eq 1 ] && rm -rf .git/hooks && ln -s ../dev/git-hooks .git/hooks || exit 0"
        ],
        "post-install-cmd": [
            "@install-hooks"
        ],
        "post-update-cmd": [
            "@install-hooks"
        ]
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "sort-packages": true
    }
}
